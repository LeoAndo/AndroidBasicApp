<resources>

    <style name="Theme.AndroidBasicApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- TODO 全アプリバージョン & Light Theme固有の設定値はここに追加してください. -->
        <!-- https://m3.material.io/theme-builder を使ってカスタムカラーを作成 -START -->
        <item name="colorCustomColor1">#086e00</item>
        <item name="colorOnCustomColor1">#ffffff</item>
        <item name="colorCustomColor1Container">#78ff5e</item>
        <item name="colorOnCustomColor1Container">#012200</item>
        <item name="colorCustomColor2">#676000</item>
        <item name="colorOnCustomColor2">#ffffff</item>
        <item name="colorCustomColor2Container">#f1e66a</item>
        <item name="colorOnCustomColor2Container">#1f1c00</item>
        <item name="colorCustomColor3">#c00012</item>
        <item name="colorOnCustomColor3">#ffffff</item>
        <item name="colorCustomColor3Container">#ffdad6</item>
        <item name="colorOnCustomColor3Container">#410002</item>
        <item name="colorCustomColor4">#a33e00</item>
        <item name="colorOnCustomColor4">#ffffff</item>
        <item name="colorCustomColor4Container">#ffdbcd</item>
        <item name="colorOnCustomColor4Container">#360f00</item>
        <!-- END -->
    </style>

    <!-- Buttonのスタイル定義 -START -->
    <!-- https://m3.material.io/components/buttons/specs -->
    <style name="Widget.AndroidBasicApp.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <!-- Shapeの丸み設定を0にする -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Material3.Corner.None</item>
        <!-- ボタン色をカスタマイズする -->
        <item name="backgroundTint">@color/my_text_button_background_color_selector1</item>
    </style>

    <style name="Widget.AndroidBasicApp.Button" parent="Widget.Material3.Button">
        <!-- Shapeをカスタマイズする -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.AndroidBasicApp.Button
        </item>
        <!-- ボタン色をカスタマイズする -->
        <item name="backgroundTint">@color/my_btn_bg_color_selector1</item>
    </style>
    <!-- END -->

    <!-- FloatingActionButtonのスタイル定義 -START-->
    <style name="Widget.AndroidBasicApp.FloatingActionButton.Primary" parent="Widget.Material3.FloatingActionButton.Primary">
        <!-- default m3_sys_elevation_level3 -->
        <item name="elevation">@dimen/m3_sys_elevation_level5</item>
    </style>
    <!-- END -->

    <!-- Shapeのスタイル定義 -START -->
    <!-- https://m3.material.io/styles/shape/shape-scale-tokens -->
    <style name="ShapeAppearanceOverlay.AndroidBasicApp.Button" parent="ShapeAppearanceOverlay.Material3.Button">
        <!--cut or rounded. default: rounded -->
        <item name="cornerFamily">cut</item>
        <!-- default: 50% -->
        <item name="cornerSize">12dp</item>
    </style>
    <!-- END -->
</resources>